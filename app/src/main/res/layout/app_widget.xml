<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appwidget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/appwidget_coin_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        tools:src="@drawable/icon_xrp" />

    <LinearLayout
        android:id="@+id/appwidget_coin_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/appwidget_coin_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appwidget_coin_short_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#212121"
            android:textSize="24sp"
            tools:text="XRP" />

        <TextView
            android:id="@+id/appwidget_coin_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#757575"
            android:textSize="14sp"
            tools:text="Ripple" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/appwidget_coin_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/appwidget_coin_name_layout"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appwidget_coin_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#212121"
            android:textSize="24sp"
            tools:text="Â¥33.929" />

        <TextView
            android:id="@+id/appwidget_coin_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#757575"
            android:textSize="14sp"
            tools:text="10:30" />

    </LinearLayout>


</RelativeLayout>