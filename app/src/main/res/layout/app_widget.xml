<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appwidget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/appwidget_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        tools:src="@drawable/icon_xrp" />

    <LinearLayout
        android:id="@+id/appwidget_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/appwidget_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appwidget_unit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text=""
            android:textColor="#212121"
            android:textSize="22sp"
            tools:text="XRP" />

        <TextView
            android:id="@+id/appwidget_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text=""
            android:textColor="#757575"
            android:textSize="14sp"
            tools:text="Ripple" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/appwidget_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/appwidget_name_layout"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appwidget_rate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text=""
            android:textColor="#212121"
            android:textSize="22sp"
            tools:text="Â¥33.93" />

        <TextView
            android:id="@+id/appwidget_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text=""
            android:textColor="#757575"
            android:textSize="14sp"
            tools:text="10:30" />

    </LinearLayout>

</RelativeLayout>